<h1>Управление библиотеками</h1>

<h3>Доступные библиотеки:</h3>
<ul class="list-group">
<% @tags.each do |item| %>
	<li class="list-group-item">
		<span class="badge"><%= item.taggings_count %></span>
		<%= item.name %>
	</li>
<% end %>
</ul>
<div class="row">
	<div class="col-xs-10">
		<%= render 'form' %>
	</div>
	<div class="col-xs-2">
		<%= form_tag '/libraries', method: "delete" do %>
			<%= submit_tag "Удалить пустые", class: "btn btn-danger col-xs-12" %>
		<% end %>
	</div>
</div>