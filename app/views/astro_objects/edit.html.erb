<h1>Редактируем объект <%= @astro_object.name %></h1>

<%= form_for @astro_object do |f| %>

	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :date %><br>
		<%= f.date_field :date %>
	</p>

	<p>
		<%= f.label :time %><br>
		<%= f.time_field :time %>
	</p>

	<p>
		<%= f.label :comment %><br>
		<%= f.text_area :comment %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>